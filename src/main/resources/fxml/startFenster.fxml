<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbox" alignment="CENTER" maxHeight="800.0" maxWidth="600.0" minHeight="800.0" minWidth="600.0" prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RaumSchiffeVersenken.GUISteuerung.GUIStartFenster">
   <children>

       <ImageView fx:id="titelanimation" fitHeight="370.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="false" smooth="false" StackPane.alignment="CENTER">
         <image>
            <Image url="@../images/titel.png" />
         </image>
         <viewport>
            <Rectangle2D height="370.0" width="500.0" />
         </viewport>
         <VBox.margin>
            <Insets left="50.0" right="50.0" />
         </VBox.margin></ImageView>

      <Button maxHeight="75.0" maxWidth="300.0" minHeight="75.0" minWidth="300.0" mnemonicParsing="false" onMouseClicked="#starteSpiel" prefHeight="75.0" prefWidth="300.0" text="Start">
         <font>
            <Font name="Corbel" size="22.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" left="150.0" right="150.0" />
         </VBox.margin>
      </Button>

      <Button maxHeight="75.0" maxWidth="300.0" minHeight="75.0" minWidth="300.0" mnemonicParsing="false" onMouseClicked="#oeffneCredits" prefHeight="75.0" prefWidth="300.0" text="Credits">
         <font>
            <Font name="Corbel" size="22.0" />
         </font>
         <VBox.margin>
            <Insets bottom="25.0" />
         </VBox.margin>
      </Button>
       
      <Button maxHeight="75.0" maxWidth="300.0" minHeight="75.0" minWidth="300.0" mnemonicParsing="false" onMouseClicked="#beendeSpiel" prefHeight="75.0" prefWidth="300.0" text="Ende">
         <font>
            <Font name="Corbel" size="22.0" />
         </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Button>

   </children>
</VBox>
